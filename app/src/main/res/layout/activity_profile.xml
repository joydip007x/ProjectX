<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:ignore="NamespaceTypo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/IVadp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:background="#C7D2E6"
                    android:fitsSystemWindows="true"
                    android:minWidth="120dp"
                    android:minHeight="120dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/restaurant"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <ImageView
                    android:id="@+id/IVadp2"
                    android:layout_width="61dp"
                    android:layout_height="82dp"
                    android:layout_alignEnd="@+id/IVadp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="346dp"
                    android:layout_marginLeft="139dp"
                    android:visibility="gone"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="0dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_baseline_add_photo_alternate_24">
                    android:fitsSystemWindows="true"
                </ImageView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="537dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/TVaAgencyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:inputType="textNoSuggestions"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:hint="Restaurant name"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/White"
                    android:textSize="25dp"
                    android:fontFamily="@font/qucisand"

                    />

                <TextView
                    android:id="@+id/TVaOwnerName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="35dp"
                    android:text="Owner's Name"
                    android:textColor="@color/White"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVaOwnerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"

                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="5dp"
                    android:inputType="text|textNoSuggestions"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/TVaAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Address"
                    android:textColor="@color/White"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVaAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="5dp"
                    android:inputType="text|textNoSuggestions"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/TVaDescription1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Description"
                    android:textColor="@color/White"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/TVaDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="1dp"

                    android:inputType="textLongMessage"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/TVaNumber1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Contact Number"
                    android:textColor="@color/White"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVaNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="5dp"
                    android:inputType="phone"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/TVaEmail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Opening &amp; Closing Hour (24H Format) "
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    />

                <TextView
                    android:id="@+id/TVaEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="5dp"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonCAT"
                    android:layout_width="193dp"
                    android:layout_height="74dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="-44dp"
                    android:layout_marginBottom="94dp"

                    android:text=""
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="99dp">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="99dp"
                        android:layout_marginBottom="32dp"
                        android:forceHasOverlappingRendering="true"
                        android:text="Edit Details"
                        android:textAlignment="textEnd"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        tools:ignore="RtlCompat" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</ScrollView>