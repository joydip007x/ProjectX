<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:strokeColor="@color/colorAccent"
    app:strokeWidth="2dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3c3240"
        android:layout_marginTop="4dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:id="@+id/rider_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaktarua Islam Jhonny"
            android:id="@+id/rider_name"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:fontFamily="@font/qucisand"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/rider_image"
            />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:id="@+id/rider_phone"
            android:textSize="15sp"
             android:textColor="@color/White"
            android:layout_below="@+id/rider_name"
             android:layout_toEndOf="@id/rider_image"
            />

        <ImageView
            android:id="@+id/rider_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_baseline_cancel_24" />


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>