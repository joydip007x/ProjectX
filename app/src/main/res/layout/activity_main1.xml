<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".MainActivity1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="449dp">


        <ImageView
            android:id="@+id/applogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="89dp"
            android:layout_marginEnd="173dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="Joldi Cook"
            android:fontFamily="@font/qucisand"
            android:textStyle="bold"
            android:textSize="25sp"
            />

        <com.github.ybq.android.spinkit.SpinKitView
            style="@style/SpinKitView.Large.PulseRing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorAccent" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signin1"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="-10dp">


        <Button
            android:id="@+id/ma_reg"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="169dp"
            android:layout_marginBottom="-63dp"
            android:text="Register"
            app:icon="@drawable/ic_baseline_add_24" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"

            android:hint="UserEmail"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            app:boxStrokeColor="@color/White"
            app:boxStrokeWidth="2dp"
            app:errorEnabled="true"
            app:hintTextColor="@color/White"
            android:textColorHint="@color/White"
            app:startIconDrawable="@drawable/ic_baseline_account_circle_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ma_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:inputType="textEmailAddress"
                app:errorEnabled="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:hint="Password"
            app:boxStrokeColor="@color/White"
            android:textColorHint="@color/White"
            app:hintTextColor="@color/White"
            app:boxStrokeWidth="2dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            app:endIconMode="password_toggle"
            app:helperTextEnabled="true"
            app:startIconDrawable="@drawable/ic_baseline_fingerprint_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ma_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/Black"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/ma_sign"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="118dp"
            android:layout_height="59dp"
            android:layout_below="@+id/outlinedTextField2"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="102dp"
            android:layout_marginEnd="154dp"
            android:text="Sign in"
            android:textColor="@android:color/white" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:indeterminateTint="@color/Black"
            android:layout_below="@+id/outlinedTextField"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="184dp" />

        <Button
            android:id="@+id/ma_forgot"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="186dp"
            android:layout_height="52dp"
            android:layout_alignTop="@+id/outlinedTextField2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"

            android:layout_marginEnd="203dp"
            android:text="Forgot password?"
            android:textColor="@color/White" />


    </RelativeLayout>


</RelativeLayout>